<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:based="clr-namespace:WpfExplorer.Forms.UI.Units;assembly=WpfExplorer.Support"
                    xmlns:views="clr-namespace:WpfExplorer.Forms.UI.Views"
                    xmlns:units="clr-namespace:WpfExplorer.Forms.UI.Units">
    <Style TargetType="{x:Type views:ExplorerWindow}"
           BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Content">
            <Setter.Value>
                <StackPanel>
                    <TextBlock Text="{Binding}" Foreground="#FFFFFF"/>
                    <TextBlock Text="{Binding DownloadDirectory}" Foreground="#FFFFFF"/>
                    <TextBlock Text="{Binding DocumentsDirectory}" Foreground="#FFFFFF"/>
                    <TextBlock Text="{Binding PicturesDirectory}" Foreground="#FFFFFF"/>
                    <units:FolderTreeView>
                        <units:FolderTreeItem Header="one"/>
                        <units:FolderTreeItem Header="two"/>
                        <units:FolderTreeItem Header="three"/>
                    </units:FolderTreeView>
                </StackPanel>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>